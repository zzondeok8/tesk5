#include <stdlib.h>
#include <stdio.h>

void sort (int n,int arr[]);

int main() 
{ 
    int n = 7; 
    int arr[7] = { 0, 25, 10, 17, 6, 12, 9 }; 
    sort(n, arr); 
return 0; 
}

void sort (int n,int arr[])
{
    int *x = malloc (7* sizeof(int));
    
    for (int i = 1; i < n; i++)
    {
        while (i > 0) 
        {
            if (arr[i] < arr[i-1])
            {
                int tmp = arr[i];
                arr[i] = arr[i-1];
                arr[i-1] = tmp;
                i -= 1;
            }
        }
    }
     for (int j=0; j<n; j++)
     {
         x[j] = arr [j];
         printf("%d\t", *x);
           
     }
     free(arr);
     }
